<select
        kendo-drop-down-list="vm.widget"
        id="{{vm.id}}"
        name="{{vm.id}}"
        style="width: 100%"
        ng-required="vm.validation.required"
        data-required-msg="{{vm.title}} is required"
        k-options="vm.options"
        k-on-change="vm.onChange(kendoEvent)"
        k-on-select="vm.events.onSelect(kendoEvent)">
</select>
<span class="k-invalid-msg" data-for="{{vm.id}}">
</span>